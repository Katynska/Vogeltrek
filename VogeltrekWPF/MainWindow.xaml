<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        xmlns:local="clr-namespace:VogeltrekWPF"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="VogeltrekWPF.MainWindow"
        mc:Ignorable="d"
        Title="Главное окно" Height="714" Width="856">

    <Window.Resources>
        <!--Стили RangeSlider-->
        <Style x:Key="RangeSliderStyle" TargetType="xctk:RangeSlider">
            <Setter Property="RangeBackground" Value="#FF3399FF" />
        </Style>

        <!-- Пример Стилей для кнопок -->
        <!--
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Control.FontFamily" Value="Verdana" />
            <Setter Property="Control.Background" Value="LightGray" />
            <Setter Property="Control.Foreground" Value="Black" />
        </Style>-->

    </Window.Resources>

    <!--Контейнер окна-->
    <Grid x:Name="GridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="127*"/>
            <RowDefinition Height="424*"/>
            <RowDefinition Height="147*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="655*"/>
            <ColumnDefinition Width="163*"/>
        </Grid.ColumnDefinitions>

        <!--Карта-->
        <gmaps:GMapControl x:Name="mapView" Loaded="mapView_Loaded" Grid.Column="1" Margin="0,127,10,10" Grid.RowSpan="2" />
        
        <!--Выподающий список-->
        <Label Grid.Column="1" Content="Label" HorizontalAlignment="Left" Margin="68,31,0,0" VerticalAlignment="Top" Height="26" Width="38"/>
        <ComboBox HorizontalAlignment="Left" Margin="27,57,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1" Height="21"/>
        <!--Рейтинг городов ввиде списк-->
        <Label Grid.Column="2" Content="Label" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top" Height="26" Width="38"/>
        <ListBox Grid.Column="2" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.RowSpan="2" Margin="10,83,10,0"/>
        <!--Ползунки пользовательских настроек-->
        <Label Grid.Column="1" Content="Label" HorizontalAlignment="Left" Margin="531,31,0,0" VerticalAlignment="Top" Height="26" Width="38"/>
        <xctk:RangeSlider Grid.Column="1" HorizontalAlignment="Left" Margin="466,57,0,0" VerticalAlignment="Top" Width="166" Height="20" Maximum="1000" HigherValue="500" LowerValue="300" 
                          Style="{StaticResource RangeSliderStyle}"/>
        <!--Инициализация стилей ползунка-->
        <Label Grid.Column="1" Content="Label" HorizontalAlignment="Left" Margin="328,31,0,0" VerticalAlignment="Top" Height="26" Width="38"/>
        <xctk:RangeSlider Grid.Column="1" HorizontalAlignment="Left" Margin="262,57,0,0" VerticalAlignment="Top" Width="166" Height="20" Maximum="1000" HigherValue="500" LowerValue="300" 
                          Style="{StaticResource RangeSliderStyle}"/>


    </Grid>
</Window>
